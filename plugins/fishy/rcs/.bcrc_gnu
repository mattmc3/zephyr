define f(n) {
  if (n <= 1) return (1);
  return (f(n-1) * n);
}

define min(x,y) {
  if (x<y) return x
  return y
}

define max(x,y) {
  if (x<y) return y
  return x
}

define comb(n, r) {
  scale=0
  return ( fac(n) / ( (fac(r)*fac(n-r) ) ) )
}

define perm(n, r) {
  scale=0
  return ( fac(n) / fac(n-r) )
}

define sin(n) {
  return (s(n));
}

define pow(x, y) {
  return p(x, y)
}

